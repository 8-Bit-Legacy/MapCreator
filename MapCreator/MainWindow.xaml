<Window x:Class="MapCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapCreator"
        xmlns:controls ="clr-namespace:MapCreator.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <GridSplitter Grid.Column="2"
              Width="2" Background="Black" 
              VerticalAlignment="Stretch" 
              HorizontalAlignment="Center"/>
        <controls:TileSelectionList Grid.Column="2" HorizontalAlignment="Stretch" SelectedTile="{Binding SelectedTile, Mode=TwoWay}" TileList="{Binding TileList}"/>
    </Grid>
</Window>

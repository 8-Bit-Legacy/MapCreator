<UserControl x:Class="MapCreator.Controls.TextureDrawing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapCreator.Controls"
             mc:Ignorable="d"
             x:Name="Uc"
             Background="Black">
    <Image Height="Auto" Width="Auto" Name="DisplayedImage" MouseMove="DisplayedImage_MouseMove" MouseLeftButtonDown="DisplayedImage_MouseLeftButtonDown" Source="{Binding Path=BoundTexture, ElementName=Uc, Converter={StaticResource TextureConverter}}"/>
</UserControl>
